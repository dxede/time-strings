{
  "name": "@ededejr/ms",
  "version": "0.1.0",
  "description": "Convert descriptions of time into milliseconds",
  "main": "index.js",
  "scripts": {
    "lint": "prettier --write **/*.{ts,json,md}",
    "lint:check": "prettier --check **/*.{ts,json,md}",
    "package:build": "tsup --format cjs,esm --dts",
    "package:prepare": "npm run scripts:run prepare-dist",
    "prepare": "husky install",
    "release": "release-it",
    "release:minor": "release-it --minor",
    "release:major": "release-it --major",
    "release:patch": "release-it --patch",
    "scripts:run": "ts-node ./scripts/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ededejr/ms.git"
  },
  "author": "@ededejr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ededejr/ms/issues"
  },
  "homepage": "https://github.com/ededejr/ms#readme",
  "dependencies": {
    "husky": "^8.0.3",
    "release-it": "^14.0.4"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/jest": "^29.5.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "release-it": "^15.10.1",
    "terser": "^5.17.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "minify": "terser",
    "terserOptions": {
      "compress": true,
      "mangle": true
    }
  },
  "release-it": {
    "git": {
      "commit": true,
      "commitMessage": "chore(release): release v${version}",
      "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
      "tagAnnotation": "Release v${version}"
    },
    "npm": {
      "publish": false,
      "publishPath": "./dist"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    },
    "hooks": {
      "before:init": [
        "npm run test",
        "npm run package:build"
      ],
      "after:bump": "npm run package:prepare",
      "after:release": "npm publish ./dist"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    }
  }
}
