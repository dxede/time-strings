{
  "name": "@ededejr/parse-time-string",
  "version": "0.0.3",
  "description": "Convert descriptions of time into milliseconds or dates",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:candidate": "tsc -p tsconfig.prod.json",
    "lint": "tslint src/**/*.ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ededejr/parse-time-string.git"
  },
  "author": "@ededejr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ededejr/parse-time-string/issues"
  },
  "homepage": "https://github.com/ededejr/parse-time-string#readme",
  "dependencies": {
    "release-it": "^14.0.4"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/jest": "^26.0.14",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "ts-jest": "^26.4.1",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "release-it": {
    "git": {
      "commit": true,
      "commitMessage": "chore(release): release v${version}",
      "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
      "tagAnnotation": "Release v${version}"
    },
    "npm": {
      "publish": false,
      "publishPath": "build"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    },
    "hooks": {
      "before:init": [
        "npm run test",
        "npm run build:candidate"
      ],
      "after:git:release": "cp package.json build/package.json && cp README.md build/README.md",
      "after:release": "npm publish ./build"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
