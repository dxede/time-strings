{
  "name": "parsetime",
  "version": "0.0.2",
  "description": "Convert time strings into MS",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "release": "release-it",
    "lint": "tslint src/**/*.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dxede/parsetime.git"
  },
  "author": "@dxede",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dxede/parsetime/issues"
  },
  "homepage": "https://github.com/dxede/parsetime#readme",
  "dependencies": {
    "@nend/utils": "^1.1.11",
    "release-it": "^14.0.4"
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3",
    "@release-it/conventional-changelog": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "release-it": {
    "hooks": {
      "before:init": "npm run lint",
      "after:init": "npm run build"
    },
    "git": {
      "changlog": "",
      "requireCleanWorkingDir": true,
      "requireBranch": false,
      "requireUpstream": true,
      "requireCommits": false,
      "addUntrackedFiles": false,
      "commit": true,
      "commitMessage": "Release v${version}",
      "commitArgs": [],
      "tag": true,
      "tagName": "v${version}",
      "tagAnnotation": "Release v${version}",
      "tagArgs": [],
      "push": true,
      "pushArgs": [
        "--follow-tags"
      ]
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "publishConfig": {
    "registry": "http://nend-home:4873"
  }
}
